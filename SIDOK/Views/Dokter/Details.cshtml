@model SIDOK.Core.Models.Dokter

@{
    ViewData["Title"] = "Details";
}

<h1>Dokter Details</h1>

<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Id)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Id)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Nama)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Nama)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Nip)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Nip)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Nik)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Nik)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Tanggal_Lahir)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Tanggal_Lahir)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Tempat_Lahir)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Tempat_Lahir)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Jenis_Kelamin)
        </dt>
        <dd class="col-sm-10">
            @if (Model.Jenis_Kelamin == 1)
            {
                <span>Laki-laki</span>
            }
            else
            {
                <span>Perempuan</span>
            }
        </dd>
        <dt class= "col-sm-2">
            @Html.DisplayNameFor(model => model.Spesialisasi.Nama)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Spesialisasi.Nama)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
<div>
    <hr />
    <h3>Daftar Jaga Poli</h3>
    <table class="table">
        <thead>
            <tr>
                <th>
                    <span>Nama</span>
                </th>
                <th>
                    <span>Lokasi</span>
                </th>
                <th>
                    Hari
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Poli)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Nama)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Lokasi)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Hari)
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
